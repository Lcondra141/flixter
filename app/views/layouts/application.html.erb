<!DOCTYPE html>
<html>
<head>
  <title>Flixter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_pack_tag 'application' %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Shrikhand" rel="stylesheet">
  <link href="http://vjs.zencdn.net/5.11.7/video-js.css" rel="stylesheet">
  <script src="http://vjs.zencdn.net/5.11.7/video.js"></script>
  <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
</head>
<body class="flexbox">
<main class="site-content">
  <div id="wrap">
  <nav class="navbar navbar-toggleable-md navbar-inverse bg-faded">
  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <a class="navbar-brand" href="#">Flixter</a>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
              <% if user_signed_in? %>
              <li class="nav-item"><%= link_to 'Dashboard', dashboard_path, class:"nav-link" %></li>
              <li class="sign-inout"><%= link_to 'Sign out', destroy_user_session_path, method: :delete, class:"nav-link" %></li>
            <% else %>
              <li><%= link_to 'Log in', new_user_session_path, class:"nav-link" %></li>
              <li><%= link_to 'Join', new_user_registration_path, class:"nav-link" %></li>
            <% end %> 
    </ul>
  </div>
</nav>

    <% if notice.present? %>
      <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <%= yield %>
  </div>
</main>

<br class="clr" />

<div id="footer">
  <div class="col-xs-12 col-sm-3">
    <b>Teachers</b>
    <br />
    <%= link_to 'Add a Course', new_instructor_course_path %>
    <br />
    <%= link_to 'My Dashboard', dashboard_path %>
  </div>
  <div class="col-xs-12 col-sm-3">
    <b>About</b>
    <br />
    <%= link_to 'Team', team_path %>
    <br />
    <%= link_to 'Careers', careers_path %>
    <br />
    <%= link_to 'Privacy Policy', privacy_path %>
    <br />
  </div>
  <div class="col-xs-12 col-sm-3">
    <b>Contact</b>
    <br />
    lcondra5@gmail.com
    <br />
    123 Main Street
    <br />
    Rogersville, TN 37857
  </div>
  <div class="col-xs-12 col-sm-3 social">
    <b>Social</b>
    <br />
  <%= link_to 'http://github.com/lcondra141' do %>
    <span class="fa fa-github-square fa-2x social-button"></span>
  <% end %>
  <%= link_to 'http://facebook.com/landoncondra' do %>
    <span class="fa fa-github-square fa-2x social-button"></span>
  <% end %>
  <%= link_to 'http://twitter/landoncondra23' do %>
    <span class="fa fa-github-square fa-2x social-button"></span>
  <% end %>
  </div>
</div>
</div>
</body>
</html>

